<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" android:background="#2abbff">

    <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:background="#e7ff6d"
            android:layout_alignParentBottom="true" android:width="80dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="18sp"
            android:id="@+id/save_button"
            android:background="#e7ff6d"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView" android:width="80dp" android:textColor="#000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="时间胶囊"
            android:textSize="24sp"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:gravity="center" android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/save_button" android:layout_toRightOf="@+id/back_button"/>

</RelativeLayout>